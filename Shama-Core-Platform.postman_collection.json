            "url": {
              "raw": "{{base_url}}/api/v1/products",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "products"]
            },
            "description": "Probar acceso sin autenticación válida"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 401\", function () {",
                  "    pm.response.to.have.status(401);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Insufficient Permissions",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sku\": \"TEST001\",\n  \"name\": \"Test Product\",\n  \"price\": 10.00,\n  \"initialStock\": 5\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/products",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "products"]
            },
            "description": "Probar acceso con permisos insuficientes (READONLY intentando crear)"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 403\", function () {",
                  "    pm.response.to.have.status(403);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Rate Limiting",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/products",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "products"]
            },
            "description": "Probar rate limiting haciendo múltiples requests"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 429) {",
                  "    pm.test(\"Rate limiting is working\", function () {",
                  "        pm.response.to.have.status(429);",
                  "    });",
                  "    ",
                  "    pm.test(\"Rate limit headers present\", function () {",
                  "        pm.expect(pm.response.headers.get('X-RateLimit-Limit')).to.exist;",
                  "        pm.expect(pm.response.headers.get('X-RateLimit-Remaining')).to.exist;",
                  "        pm.expect(pm.response.headers.get('X-RateLimit-Reset')).to.exist;",
                  "    });",
                  "} else {",
                  "    pm.test(\"Request successful within limits\", function () {",
                  "        pm.response.to.have.status(200);",
                  "    });",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    }
  ],
