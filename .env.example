# Shama Core Platform - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ==========================================
# Database Configuration
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=shama_user
DB_PASSWORD=your_secure_password
DB_DATABASE=shama_platform

# ==========================================
# JWT Configuration
# ==========================================
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_chars
JWT_EXPIRES_IN=1h

# ==========================================
# Service URLs (for development)
# ==========================================
INVENTORY_URL=http://localhost:5001
CRM_URL=http://localhost:5002
SALES_URL=http://localhost:5003

# ==========================================
# NATS Configuration
# ==========================================
NATS_URL=nats://localhost:4222

# ==========================================
# Redis Configuration
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# MinIO Configuration
# ==========================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=shama-pdfs

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=development
PORT=5000

# Brand Colors (for PDF generation)
BRAND_COLOR_PRIMARY=#f0c800
BRAND_COLOR_SECONDARY=#2E2725

# ==========================================
# Observability
# ==========================================
OTEL_SERVICE_NAME=shama-gateway
OTEL_TRACES_EXPORTER=otlp
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# ==========================================
# Rate Limiting
# ==========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100